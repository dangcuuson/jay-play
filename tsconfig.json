        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "*": ["*"]
        },
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}